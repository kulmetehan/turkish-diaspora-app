##########
# Core App
##########
APP_VERSION=0.1.0-local
ENVIRONMENT=local                 # local | dev | staging | prod
DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@HOST:5432/DBNAME

##########
# Admin Auth (Supabase)
##########
SUPABASE_JWT_SECRET=your_supabase_jwt_secret
ALLOWED_ADMIN_EMAILS=admin@example.com,second@example.com

##########
# OpenAI (Classification & Verification)
##########
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
CLASSIFY_MIN_CONF=0.80

##########
# Discovery (OSM Overpass)
##########
OVERPASS_USER_AGENT=TurkishDiasporaApp/1.0 (contact: you@example.com)
DISCOVERY_RATE_LIMIT_QPS=0.15
DISCOVERY_SLEEP_BASE_S=3.0
DISCOVERY_SLEEP_JITTER_PCT=0.20
DISCOVERY_BACKOFF_SERIES=20,60,180,420
OVERPASS_TIMEOUT_S=30
DISCOVERY_MAX_RESULTS=25
MAX_SUBDIVIDE_DEPTH=2
OSM_TURKISH_HINTS=true
OSM_LOG_QUERIES=false
OSM_TRACE=0

##########
# Monitor Bot (Freshness)
##########
MONITOR_MAX_PER_RUN=200
MONITOR_BOOTSTRAP_BATCH=2000

##########
# Alerts & Metrics
##########
ALERT_CHECK_INTERVAL_SECONDS=60
ALERT_ERR_RATE_THRESHOLD=0.10
ALERT_ERR_RATE_WINDOW_MINUTES=60
ALERT_GOOGLE429_THRESHOLD=5
ALERT_GOOGLE429_WINDOW_MINUTES=60
ALERT_WEBHOOK_URL=
ALERT_CHANNEL=
ALERT_RUN_ONCE=0

##########
# Frontend (Vite)
##########
VITE_API_BASE_URL=http://127.0.0.1:8000
VITE_MAPBOX_TOKEN=
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=
